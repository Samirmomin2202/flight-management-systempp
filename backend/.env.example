# Copy this file to .env and fill in your values

# MongoDB connection string (Atlas or local). Example for Atlas:
# MONGO_URI=mongodb+srv://<username>:<password>@<cluster>/<db>?retryWrites=true&w=majority
# Example for local MongoDB:
# MONGO_URI=mongodb://127.0.0.1:27017/flightdb
MONGO_URI=

# JWT secret for signing auth tokens (any random string)
JWT_SECRET=replace-with-a-strong-secret

# Port the backend will listen on (optional)
PORT=5000

# Razorpay credentials (required for payments)
# Obtain from https://dashboard.razorpay.com -> Settings -> API Keys
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
# Optional: webhook secret if you configure Razorpay webhooks
# RAZORPAY_WEBHOOK_SECRET=
